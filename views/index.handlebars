<h1 class="text-center mb-3">{{title}}</h1>

<form action="/api/users" method="post" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email">
    </div>
    <input type="submit" value="ADD USER" class="btn btn-primary btn-block">
</form>

<h4>Users</h4>
<ul class="list-group">
    {{#each users}}
    <li class="list-group-item">{{this.name}} : {{this.email}}</li>
    {{/each}}
</ul>

<a href="/api/users" class="btn btn-light mt-4">Show JSON</a>